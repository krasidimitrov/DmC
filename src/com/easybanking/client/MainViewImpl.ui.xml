
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

  <ui:with field="res" type="com.easybanking.client.resources.Resources"/>

  <ui:style type="com.easybanking.client.MainViewImpl.MainViewCss">

    .navWrapper {
      width: 1024px;
      margin-left: auto;
      margin-right: auto;
    }

    .navImage {
      float: left;
    }

    .navBar {
      width: 750px;
      float: left;
    }

    .navLink {
    }

    .navLink:hover {
      background-color: #dcdcdc;
    }

    .logoutNav {
      float: left;
    }

    .logoutIcon {
      float: left;
      margin-top: 15px;
    }

    .imageLogo {
      float: left;
      margin-top: 20px;
      margin-bottom: 10px;
    }

    .clearBoth {
      clear: both;
    }

    .viewPanelStyle {

      width: 1024px;
      margin-left: auto;
      margin-right: auto;
    }

    .messagePanel {
      width: 400px;
      height: 20px;
      text-align: center;
      margin-left: auto;
      margin-right: auto;
    }

    .hidden {
      visibility: hidden;
    }
  </ui:style>

  <g:HTMLPanel ui:field="mainPanel">


    <div>
      <div class="{style.navWrapper}">
        <b:Navbar addStyleNames="{style.navImage}">
          <b:Nav><g:Image ui:field="imageLogo" resource="{res.tt}" addStyleNames="{style.imageLogo}"/></b:Nav>
        </b:Navbar>

        <b:Navbar addStyleNames="{style.navBar}">
          <b:Nav addStyleNames="{style.navLink}"><b:NavLink ui:field="accountTabButton">Account Info</b:NavLink></b:Nav>
          <b:Nav addStyleNames="{style.navLink}"><b:NavLink ui:field="transferTabButton">Transfer Money</b:NavLink></b:Nav>
          <b:Nav addStyleNames="{style.navLink}"><b:NavLink ui:field="creditTabButton">Bill Payments</b:NavLink></b:Nav>
          <b:Nav addStyleNames="{style.navLink}"><b:NavLink ui:field="calculatorTabButton">Currency Calculator</b:NavLink></b:Nav>
          <b:Nav alignment="RIGHT" addStyleNames="{style.navLink}">
            <b:NavLink text="Logout" addStyleNames="{style.logoutNav}" ui:field="logoutButton"/>
            <b:Icon type="SIGNOUT" addStyleNames="{style.logoutIcon}" iconSize="LARGE"/>
          </b:Nav>
        </b:Navbar>
        <div class="{style.clearBoth}"/>
      </div>
    </div>

    <b:AlertBlock ui:field="messagePanel" addStyleNames="{style.messagePanel}" type="SUCCESS" close="false" />

    <g:HTMLPanel ui:field="viewPanel" addStyleNames="{style.viewPanelStyle}" />

  </g:HTMLPanel>
</ui:UiBinder>