<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    .mainPanelStyle {
      margin-left: auto;
      margin-right: auto;
      margin-top: 200px;

      width: 800px;
      height: 600px;
      background-color: rgba(102, 102, 107, 0.23);
    }

    @external .gwt-Button;
    .gwt-Button {
      margin-bottom: 30px;
      color: rgb(0, 0, 0);
      font-style: bold;
      width: 140px;
      height: 30px;
    }

    .viewPanelStyle {
      text-align: center;
      background-color: rgba(115, 115, 115, 0.20);
      margin-top: -200px;
      margin-left: 150px;
      width: 540px;
      height: 300px;
    }
  </ui:style>




  <g:HTMLPanel ui:field="mainPanel" styleName="{style.mainPanelStyle}">
    <g:VerticalPanel>
      <g:Button ui:field="accountTabButton">Account info</g:Button>
      <g:Button ui:field="transferTabButton">Transfer money</g:Button>
      <g:Button ui:field="creditTabButton">Credit payments</g:Button>
      <g:Button ui:field="calculatorTabButton">Currency calculator</g:Button>
    </g:VerticalPanel>
    <g:HTMLPanel styleName="{style.viewPanelStyle}" ui:field="viewPanel">

    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>