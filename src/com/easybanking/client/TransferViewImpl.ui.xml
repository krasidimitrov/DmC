<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>


  <ui:style>
    .transferPanelStyle {
      /*width: 400px;*/
      /*margin-top: -200px;;*/
      /*margin-left: 220px;*/
      /*margin-right: auto;*/
      /*background-color: rgba(255, 0, 28, 0.99);*/
    }

    .accountStyle {
      width: 100px
    }

    .balanceStyle {
      margin-top: -20px;
      margin-left: 315px;
    }

    .currencyStyle {
      margin-top: -20px;
      margin-left: 300px;
    }

    .transferStyle {
      float: right;
    }

    .label {
      float: left;
      margin-right: 10px;
    }

    .clearBoth {
      clear: both;
    }

    .transferPanel {
      margin-top: 10px;
    }

    .receiverAccountBox {
      margin-left: 20px;
      width: 222px;
      float: left;
    }

    .amountBox {
      margin-left: 44px;
      width: 222px;
      float: left;
    }

    .balanceBox {
      width: 100px;
      float: left;
      margin-right: 10px;
    }

    .balanceBox:disabled {
      background-color: white;
    }

    .transactionsPanel {
      max-height: 205px;
      overflow-y: auto;
    }

    .legendTitles {
      text-align: center;
    }
  </ui:style>



  <g:HTMLPanel>

    <b:Hero>
      <b:Legend addStyleNames="{style.legendTitles}">Transfer Money</b:Legend>
      <g:HTMLPanel>
        <g:Label addStyleNames="{style.label}">Transfer from</g:Label>
        <b:ListBox ui:field="accountBox" addStyleNames="{style.label}"/>
        <g:Label addStyleNames="{style.label}">with balance: </g:Label>
        <b:TextBox styleName="{style.balanceBox}" ui:field="balanceLabel" enabled="false" height="30"/>
        <g:Label addStyleNames="{style.label}" ui:field="currencyLabel" />
        <div class="{style.clearBoth}" />
      </g:HTMLPanel>
      <g:HTMLPanel addStyleNames="{style.transferPanel}">
        <g:Label addStyleNames="{style.label}">Transfer to</g:Label>
        <b:TextBox ui:field="receiverAccountBox" addStyleNames="{style.receiverAccountBox}" height="30"/>
        <div class="{style.clearBoth}" />
      </g:HTMLPanel>
      <g:HTMLPanel>
        <g:Label addStyleNames="{style.label}">Amount</g:Label>
        <b:TextBox ui:field="amountBox" addStyleNames="{style.amountBox}" height="30"/>
      </g:HTMLPanel>
      <b:Button ui:field="transferButton" text="Transfer" type="INFO" addStyleNames="{style.transferStyle}"/>

      <b:Legend addStyleNames="{style.legendTitles}">Outgoing Transactions</b:Legend>
      <g:HTMLPanel ui:field="outTransactionsPanel" addStyleNames="{style.clearBoth} {style.transactionsPanel}"/>

      <b:Legend addStyleNames="{style.legendTitles}">Incoming Transactions</b:Legend>
      <g:HTMLPanel ui:field="inTransactionsPanel" addStyleNames="{style.clearBoth} {style.transactionsPanel}" />
    </b:Hero>
  </g:HTMLPanel>
</ui:UiBinder>