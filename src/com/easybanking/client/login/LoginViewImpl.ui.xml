<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
  <ui:style>

    .login {
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      border: solid;
      border-width: 1px;
      border-color: silver;
      padding: 20px;
      width: 15%;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
      background-color: ghostwhite;
    }

    .error {
      width: 15%;
      margin-left: auto;
      margin-right: auto;
      margin-top: 10px;
      text-align: center;
    }

    .icon {
      float: left;
    }

    .username {
      width: 85%;
      margin-left: 15px;
    }

    .password {
      width: 85%;
      margin-left: 17px;
    }

    .loginButton {
      float: right;
      margin-top: 15px;
    }

    .clearBoth {
      clear: both;
    }

  </ui:style>

  <g:HTMLPanel>

    <g:HTMLPanel addStyleNames="{style.login}">
      <b:Legend>Login</b:Legend>
      <div>
        <b:Icon type="USER" iconSize="LARGE" addStyleNames="{style.icon}"/>
        <b:TextBox ui:field="username" addStyleNames="{style.username}" placeholder="Username" height="25"/>
      </div>
      <div>
        <b:Icon type="LOCK" iconSize="LARGE" addStyleNames="{style.icon}"/>
        <b:PasswordTextBox ui:field="password" addStyleNames="{style.password}" placeholder="Password" height="25"/>
      </div>
      <div>
        <b:Button ui:field="loginButton" text="Login" type="PRIMARY" addStyleNames="{style.loginButton}"/>
      </div>
      <div class="{style.clearBoth}" />
    </g:HTMLPanel>

    <b:AlertBlock ui:field="error" addStyleNames="{style.error}" type="ERROR" close="false" text="Wrong username/password" visible="false"/>

  </g:HTMLPanel>
</ui:UiBinder>