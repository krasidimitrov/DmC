<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <ui:style>
    .editPanelStyle {
      width: 400px;
      /*margin-top: -200px;;*/
      margin-left: auto;
      margin-right: auto;
      /*background-color: rgb(255, 0, 28);*/
    }

    .tableStyle{
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    }

  </ui:style>

  <g:HTMLPanel styleName="{style.editPanelStyle}">
    <g:FlexTable ui:field="currencyCellTable" styleName="{style.tableStyle}"/>
    Convert<g:TextBox ui:field="input" /><g:ListBox ui:field="currencyList"/> to <g:TextBox ui:field="output"/><g:ListBox ui:field="currencyList2"/>
    <g:Button ui:field="convertButton">Convert</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>