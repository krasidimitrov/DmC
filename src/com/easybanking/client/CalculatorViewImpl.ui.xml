<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
  <ui:style>

    .currencyTable {
      width: 300px;
      height: 220px;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    }

    .legend {
      text-align: center;
    }

    .floatLeft {
      float: left;
      margin-right: 5px;
    }

    .clearBoth {
      clear: both;
    }

    .convertorPanel {
      width: 520px;
      margin-left: auto;
      margin-right: auto;
      margin-top: 30px;
    }
  </ui:style>

  <g:HTMLPanel>

    <b:Hero>
      <g:HTMLPanel>
        <b:Legend addStyleNames="{style.legend}">Currency Calculator</b:Legend>
        <g:FlexTable ui:field="currencyCellTable" addStyleNames="{style.currencyTable}"/>

        <div class="{style.convertorPanel}">
          <div>
            <g:TextBox ui:field="input" addStyleNames="{style.floatLeft}" height="30"/>
            <g:ListBox ui:field="currencyList" addStyleNames="{style.floatLeft}"/>
            <b:Button type="PRIMARY" ui:field="convertButton" addStyleNames="{style.floatLeft}" text="Convert" />
            <div class="{style.clearBoth}" />
          </div>
          <div>
            <g:TextBox ui:field="output" addStyleNames="{style.floatLeft}" height="30"/>
            <g:ListBox ui:field="currencyList2" addStyleNames="{style.floatLeft}" />
            <div class="{style.clearBoth}" />
          </div>
        </div>
      </g:HTMLPanel>
    </b:Hero>

  </g:HTMLPanel>
</ui:UiBinder>